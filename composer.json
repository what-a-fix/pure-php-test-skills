{
    "name": "whatafix/text-tagger",
    "description": "Library that return tag from a text according to it's content",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "psr-4": {
            "Whatafix\\TextTagger\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Whatafix\\TextTagger\\Tests\\": "src"
        }
    },
    "require-dev":{
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "tests": "vendor/bin/phpunit --color=always tests"
    }
}
